<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>au.com.nicta.openshapa</groupId>
  <artifactId>openshapa</artifactId>
  <packaging>jar</packaging>
  <version>0.1</version>
  <name>openshapa</name>
  <url>http://openshapa.org</url>

  <organization>
    <name>NICTA</name>
    <url>http://www.nicta.com.au</url>
  </organization>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

  <!-- External repositories - where to find third-party dependancies. -->
  <repositories>
    <repository>
      <id>jboss</id>
      <url>http://repository.jboss.com/maven2</url>
    </repository>

    <repository>
      <id>mvnsearch</id>
      <url>http://mvnsearch.org/maven2/</url>
    </repository>
  </repositories>

  <!-- Build properties. -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-provider-gitexe</artifactId>
            <version>1.1-SNAPSHOT</version>
          </dependency>
        </dependencies>
      </plugin>

      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <!-- Where to obtain our source. -->
  <scm>
    <connection>scm:git:git://152.98.217.46/Share/maven/openshapa</connection>
    <url>scm:git:git://152.98.217.46/Share/maven/openshapa</url>
  </scm>

  <!-- Third party dependancies. -->
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>net.java.dev.swing-layout</groupId>
      <artifactId>swing-layout</artifactId>
      <version>1.0.2</version>
    </dependency>

    <dependency>
      <groupId>javax.media</groupId>
      <artifactId>jmf</artifactId>
      <version>2.1.1e</version>
    </dependency>

    <dependency>
      <groupId>fobs4jmf</groupId>
      <artifactId>fobs4jmf</artifactId>
      <version>0.4.1_win</version>
    </dependency>
  </dependencies>
</project>
