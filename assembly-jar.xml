<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>JAR-${buildNumber}</id>
  <formats>
    <format>zip</format>
  </formats>

  <!-- Include the samples directory. -->
  <fileSets>
    <fileSet>
      <directory>src/main/samples/</directory>
      <outputDirectory>samples</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/favourites/</directory>
      <outputDirectory>favourites</outputDirectory>
    </fileSet>
  </fileSets>

  <moduleSets>
    <moduleSet>
      <binaries>
        <dependencySets>
          <dependencySet>
              <includes/>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
