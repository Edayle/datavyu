<?xml version="1.0" encoding="UTF-8"?>
<assembly>

  <id>bin-${buildNumber}</id>
  <formats>
    <format>zip</format>
  </formats>

  <!-- Include configuration for log4j. -->
  <files>
    <file>
      <source>log4j.properties</source>
    </file>
  </files>

  <!-- Include the samples directory. -->
  <fileSets>
    <fileSet>
      <directory>src/main/samples/</directory>
      <outputDirectory>samples</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/favourites/</directory>
      <outputDirectory>favourites</outputDirectory>
    </fileSet>
  </fileSets>

  <binaries>
    <dependencySets>
      <dependencySet>
          <includes/>
      </dependencySet>
    </dependencySets>
  </binaries>
</assembly>
