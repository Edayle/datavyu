<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE OpenSHAPAConfig SYSTEM "http://www.openshapa.org/rsc/openshapa_config.dtd">

<OpenSHAPAConfig>
  <language>english</language>

  <modules>
    <discreteManager>
      <name>OpenShapa ODBC Database</name>
      <description>Default ODBC Openshapa Database Manager</description>
      <menu>File</menu>
      <submenu>true</submenu>
      <class>openshapa.disc.ODBCManager</class>
      <path>.</path>
      <isdefault>true</isdefault>
    </discreteManager>

    <continuousDisplay>
      <name>Quicktime Controller</name>
      <description>Default Openshapa Quicktime Video Controller</description>
      <menu>Viewers</menu>
      <submenu>false</submenu>
      <class>openshapa.cont.QTVideoController</class>
      <path>.</path>
    </continuousDisplay>

    <discreteDisplay>
      <name>Spreadsheet</name>
      <description>Default Openshapa Spreadsheet</description>
      <menu>Viewers</menu>
      <submenu>false</submenu>
      <class>openshapa.disc.spreadsheet.Spreadsheet</class>
      <path>.</path>
      <isdefault>true</isdefault>
    </discreteDisplay>
  </modules>

  <display>
    <window>
      <name>main</name>
      <size>
        <actual>
          <width>800</width>
          <height>600</height>
        </actual>
      </size>
      <location>
        <relative>
          CENTERED
        </relative>
      </location>
    </window>
  </display>

  <gui>
    <menu>
      <backgroundColor>
        white
      </backgroundColor>

      <foregroundColor>
        black
      </foregroundColor>

      <hightlightColor>
        cyan
      </hightlightColor>

      <font>
        <type>Arial</type>
        <style>Plain</style>
        <size>16</size>
      </font>
    </menu>

    <spreadsheet>
      <backgroundColor>
        white
      </backgroundColor>

      <foregroundColor>
        black
      </foregroundColor>

      <borderColor>
        black
      </borderColor>

      <selectedColor>
        cyan
      </selectedColor>

      <hightlightColor>
        pink
      </hightlightColor>

      <timeStampFont>
        <type>Arial</type>
        <style>Bold</style>
        <size>8</size>
      </timeStampFont>

      <dataFont>
        <type>Arial</type>
        <style>Plain</style>
        <size>12</size>
      </dataFont>
   </spreadsheet>
  </gui>
</OpenSHAPAConfig>
