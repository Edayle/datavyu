<!ELEMENT continuousDisplay (name,description,menu,submenu,class,path,metadata*)>
<!ELEMENT discreteDisplay   (name,description,menu,submenu,class,path,isdefault*,metadata*)>
<!ELEMENT plugin            (name,description,menu,submenu,class,path,metadata*)>
<!ELEMENT name              (#PCDATA)>
<!ELEMENT description       (#PCDATA)>
<!ELEMENT menu              (#PCDATA)>
<!ELEMENT submenu           (#PCDATA)>
<!ELEMENT class             (#PCDATA)>
<!ELEMENT path              (#PCDATA)>
<!ELEMENT isdefault         (#PCDATA)>
<!ELEMENT metadata          (name,data)>
<!ELEMENT data              (#PCDATA)>
<!ELEMENT display           (window,metadata*)>
<!ELEMENT window            (name,size,location,metadata*)>
<!ELEMENT size              (actual|relative)>
